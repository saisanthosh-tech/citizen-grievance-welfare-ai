# Backend Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
APP_NAME="Citizen Grievance & Welfare Intelligence System"
APP_VERSION="2.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=False

# Server Settings
HOST="0.0.0.0"
PORT=8000
RELOAD=False

# Database
DATABASE_URL="sqlite:///./grievances.db"
# For production, use PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/grievances_db"

# Security
SECRET_KEY="change-this-to-a-secure-random-key-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:8501", "http://localhost:3000", "http://127.0.0.1:8501"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Email Configuration (for notifications)
SMTP_ENABLED=False
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@grievance-welfare.gov.in"

# File Upload
MAX_UPLOAD_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=["jpg", "jpeg", "png", "pdf", "doc", "docx"]

# Security Headers
ENABLE_SECURITY_HEADERS=True
ENABLE_HTTPS_REDIRECT=False  # Enable in production

# Data Encryption
ENABLE_FIELD_ENCRYPTION=False  # Enable in production
ENCRYPTION_KEY="change-this-to-secure-key-in-production"

# Admin Settings
ADMIN_EMAIL="admin@grievance-welfare.gov.in"
ENABLE_ADMIN_REGISTRATION=False

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_AUDIT_LOGGING=True
ENABLE_ANALYTICS=True
